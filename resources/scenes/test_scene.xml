<scene name="Test Scene">
	<!-- Shaders go here -->
	<shaders>
		<shader name="deferredShading">
			<subShader name="geometryPass">
				<renderTarget>
					<buffer name="diffuse" type="rgba32" />
					<buffer name="specular" type="rgb32" />
					<buffer name="normals" type="rgb32" />
					<buffer name="emmisive" type="rgb32" />
					<buffer name="positions" type="rgb32" />
					<buffer name="depth" type="depth" />
				</renderTarget>
				<file type="vert">resources/shaders/deferred_shading/geometry_pass.vert</file>
				<file type="frag">resources/shaders/deferred_shading/geometry_pass.frag</file>
			</subShader>
			<subShader name="lightingPass">
				<screenSpace>true</screenSpace>
				<inputBuffers>
					<buffer fromShader="geometryPass" name="diffuse" sampler="diffuse"/>
					<buffer fromShader="geometryPass" name="specular" sampler="specular"/>
					<buffer fromShader="geometryPass" name="normals" sampler="normals"/>
					<buffer fromShader="geometryPass" name="emmisive" sampler="emmisive"/>
					<buffer fromShader="geometryPass" name="positions" sampler="positions"/>
				</inputBuffers>
				<file type="vert">resources/shaders/deferred_shading/lighting_pass.vert</file>
				<file type="frag">resources/shaders/deferred_shading/lighting_pass.frag</file>
			</subShader>
		</shader>
	</shaders>

	<!-- Scene entities go here -->
	<entities>
		<entity name="Cube">
			<transform>
				<translation x="0" y="0" z="0"/>
				<rotation x="0" y="45" z="0"/>
			</transform>
			<model>
				<shadowCaster>true</shadowCaster>
				<path>resources/models/testCube.obj</path>
			</model>
		</entity>

		<entity name="Walls">
			<transform>
				<translation x="0" y="0" z="0"/>
				<rotation x="0" y="0" z="0"/>
			</transform>
			<model>
				<shadowReceiver>true</shadowReceiver>
				<path>resources/models/walls.obj</path>
			</model>
		</entity>

		<entity name="KeyLight" x="0" y="5" z="5">
			<transform>
				<translation x="0" y="5" z="5"/>
				<rotation x="0" y="0" z="0"/>
			</transform>
			<light r="1.0" g="1.0" b="1.0" power="7.0"/>
		</entity>

		<entity name="FillLight" x="5" y="0" z="3">
			<transform>
				<translation x="5" y="1" z="2"/>
				<rotation x="0" y="0" z="0"/>
			</transform>
			<light r="0.7" g="0.7" b="1.0" power="3.0"/>
		</entity>
	</entities>
</scene>
